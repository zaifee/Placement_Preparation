//Brute force which takes O(n logn) time
//User function Template for C++

class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        if(n == 0)
        return false;
        
        while(n > 1 && (n&1) == 0)
         n = n>>1;
         return n==1?true:false;
        
    }
};

// Optimized approach  -- O(1)
//User function Template for C++

class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        if(n == 0)
        return false;
        
        while(n > 1 && (n&1) == 0)
         n = n>>1;
         return n==1?true:false;
        
    }
};
