
#include <iostream>

using namespace std;
bool isPrime(int n){
   
    
    if(n <= 1){
        return false;
    }
    for(int i=2; i<n/2; i++){
        // rem = 0
        if(n % i == 0){
          
            return false;
            break;
           }
        
    }
    return isPrime;
    
}

int main()
{
    int n;
     cout<<"Enter any Number of your choice "<<endl;
     cin>>n;
     if(isPrime(n)){
        cout<<"Not a Prime Number "<<endl;
    }else{
        cout<<"This is a prime Number "<<endl;
    }
    
    return 0;
}
